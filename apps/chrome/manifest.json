{
	"manifest_version": 2,
	"name": "挖段子网页收藏工具",
	"version": "1.7.9",
	"description": "挖段子网页收藏工具，随时随地挖段子",
	"background": {
		"page": "background.html"
	},
	"update_url": "http://s0.wabao.me/chrome/updates.xml",
	"icons": {
		"16": "icons/icon.png",
		"18": "icons/icon.png",
		"24": "icons/icon.png",
		"48": "icons/icon.png",
		"64": "icons/icon.png",
		"128": "icons/icon.png"
	},
	"permissions": [
		"notifications",
		"http://*/*",
		"https://*/*",
		"tabs",
		"cookies",
		"history",
		"unlimitedStorage",
		"contextMenus"
	],
	"browser_action": {
		"default_icon": "icons/icon.png",
		"popup": "main.html",
		"default_title": "挖段子快速发布插件"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*"],
			"css": ["resources/styles/cd-content.css"],
			"js": ["resources/libs/jquery.min.js", "resources/scripts/cd-content.js"]
		}
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "homepage_url": "http://www.waduanzi.com/"
}